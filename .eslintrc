{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-scoped-var": 2,
    "brace-style": [
      2,
      "1tbs"
    ],
    "computed-property-spacing": [
      2,
      "never"
    ],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [
      2,
      "smart"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-depth": [
      1,
      3
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "error",
          "time",
          "timeEnd"
        ]
      }
    ],
    "no-const-assign": 2,
    "no-global-assign": 2,
    "no-extend-native": 2,
    "no-invalid-this": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-this-before-super": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "no-var": 2,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "one-var-declaration-per-line": 2,
    "prefer-template": 2,
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "semi": [
      2,
      "always"
    ],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "space-unary-ops": 2
  }
}
